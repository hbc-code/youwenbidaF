.score {
  margin: 20px;
  border-radius: 8px;
}
.score .score-rule {
  display: flex;
  justify-content: space-between;
}
.score .score-rule .score-object {
  width: 100%;
}
.score .score-rule .score-object .score-object-content {
  background-color: white;
  padding: 20px;
}
.score .score-rule .score-object .score-object-content div {
  margin: 10px;
}
.score .score-rule .score-object .score-object-content div li {
  font-size: 16px;
  padding: 8px;
}
.score .score-search {
  margin-top: 20px;
  background-color: white;
}
.score .score-search .score-search-top {
  display: flex;
  justify-content: space-between;
  margin: 10px;
  padding: 30px 30px 10px 30px;
  background-color: #D2F1E3;
  border-radius: 8px;
}
.score .score-search .score-search-top ul {
  display: flex;
  justify-content: space-between;
}
.score .score-search .score-search-top ul li {
  margin-right: 40px;
}
